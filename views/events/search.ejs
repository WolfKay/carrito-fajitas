<h2 class="centered"> Search event </h2>

<form class="search-form" action="/events/search" method="POST">

  <div class="form-group col-xs-3">
    <label class="centered" for="startDate">From</label>
    <input class="form-control" type="date" id="startDate" name="startDate">
  </div>

  <div class="form-group col-xs-3">
    <label class="centered" for="endDate">To</label>
    <input class="form-control" type="date" id="endDate" name="endDate">
  </div>

  <div class="form-group col-xs-3">
    <label class="centered" for="numberPeople">People</label>
    <input class="form-control" type="number" name="numberPeople" id="numberPeople">
  </div>

  <div class="form-group col-xs-3">
    <label class="centered" for="price">Budget</label>
    <input class="form-control" type="number" name="price" id="price">
  </div>

  <div class="form-group col-xs-12">
    <label class="control-label" for="category">Food category</label><br>
    <select name="category" id="category" class="form-control">
      <option value="" selected hidden>Choose here</option>
      <% categories.forEach((category) => { %>
        <option type="text" value="<%= category %>">
          <%= category %>
        </option>
      <%  }) %>
    </select>
  </div>

  <button type="submit" class="btn btn-primary center-block">Search</button>

</form>