<ul class="list-group col-xs-12">
  <% recipes.forEach((recipe) => { %>
      <li class="list-group-item list-selectable item-id" id="<%= recipe.id%>">
          <div class="container-fluid">
              <div class="row-fluid">
                  <div class="col-xs-9 col-sm-10 inside-list">
                      <div><%= recipe.name %></div>
                  </div>
                  <div class="col-xs-3 col-sm-2 inside-list">
                      <div><img class="small-icon" src="/visual-assets/people-icon.png"/> <%= recipe.numberPeople %></div>
                  </div>
              </div>
              <div class="row-fluid">
                  <div class="col-xs-1 inside-list">
                      <a href="/recipes/<%= recipe._id%>"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a>
                  </div>
                  <% if (recipe.hasIdInArray(user._id, recipe._favorites) > -1) { %>
                      <div class="col-xs-1 inside-list">
                          <span class="glyphicon fav-glyphicon glyphicon-heart" aria-hidden="true"></span>
                      </div>
                  <% } else { %>
                      <div class="col-xs-1 inside-list">
                          <span class="glyphicon fav-glyphicon glyphicon-heart-empty" aria-hidden="true"></span>
                      </div>
                  <% } %>
                  <% if (recipe._creator.equals(user._id)) { %>
                      <div class="col-xs-1 inside-list">
                          <a href="/recipes/<%= recipe._id%>/edit"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>                       
                      </div>
                  <% } %>
              </div>
              <div class="list-hidable list-hidden">
                  <div class="row-fluid">
                      <div class="col-xs-12 inside-list">
                          <div><%= recipe._creator.username %></div>
                          <div><%= recipe.categories %></div>
                      </div>
                  </div>
              </div>
          </div>                    
      </li>
  <% }) %>
</ul>